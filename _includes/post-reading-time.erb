{% capture words %}
    {{ page.content | number_of_words | minus: 180 }}
{% endcapture %}
{% unless words contains "-" %}
    {% assign minutes = words | plus: 180 | divided_by: 180 %}
    {% if minutes > 0 %}
        {{ " | " }}
        {{ minutes }}
    {% endif %}
    {% if minutes == 1 %}
        {{ " minute to read" }}
    {% else %}
        {{ " minutes to read" }}
    {% endif %}
{% endunless %}